{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake",
      "type": "shell",
      "options": {
        "cwd": "build"
      },
      "command": "bash -c \"${input:pickCMakeTask}\"",
      "group": "build"
    },
    {
      "label": "Build test",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "-Iinclude/",
        "-Llib/",
        "-Wl,-rpath=${workspaceFolder}/lib/",
        "tests/ma/test_${input:pickTest}.cc",
        "-o",
        "bin/${input:pickTest}",
        "-lcovdel.ma",
      ],
      "group": "build"
    },
    {
      "label": "Run Target",
      "type": "shell",
      "command": "bin/${input:pickTarget}",
      "group": "build"
    },
    {
      "label": "Build and Run (CMake)",
      "dependsOn": [
        "CMake",
        "Run Target"
      ],
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "Build and Run (Test)",
      "dependsOn": [
        "Build test",
        "Run Target"
      ],
      "dependsOrder": "sequence",
      "group": "build"
    },
  ],
  "inputs": [
    {
      "id": "chooseBuild",
      "type": "pickString",
      "description": "Choose the build task before running target ...",
      "options": [
        "CMake",
        "Build test",
      ],
    },
    {
      "id": "pickCMakeTask",
      "type": "command",
      "command": "extension.commandvariable.pickStringRemember",
      "args": {
        "description": "Pick CMake task",
        "options": [
          [
            "Configure\t\t",
            "ccmake .."
          ],
          [
            "Build / Update\t\t",
            "make install"
          ],
          [
            "Clean\t\t\t",
            "rm -rf *"
          ],
          [
            "Full\t\t\t",
            "rm -rf * && ccmake .. && make install"
          ]
        ]
      }
    },
    {
      "id": "pickTarget",
      "type": "pickString",
      "description": "Pick execution target ...",
      "options": [
        "dimension"
      ]
    },
    {
      "id": "pickTest",
      "type": "pickString",
      "description": "Pick test to compile ...",
      "options": [
        "dimension"
      ]
    },
  ]
}
